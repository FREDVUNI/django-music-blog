{
  "builds": [
    {
      "src": "website/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "website/wsgi.py"
    }
  ],
  "buildCommand": "python website/manage.py collectstatic --noinput"
}
